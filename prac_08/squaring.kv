BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    # --- TOP SECTION (horizontal) ---
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            text: '7'
            font_size: 40
            multiline: False

        Button:
            text: 'Square'
            font_size: 32
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 40
            color: (1, 0.4, 0.7, 1)     # pink

    # --- BOTTOM SECTION (instruction label) ---
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Enter a number and press "Square"'
            color: (1, 1, 0, 1)          # yellow, matches prac
            font_size: 22